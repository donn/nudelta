{
  "name": "nudelta-app",
  "author": "Mohamed Gaber",
  "version": "0.3.0",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/owner/project#readme",
  "description": "an open source alternative to the nuphy console",
  "dependencies": {
    "@fontsource/nunito": "^4.5.11",
    "@rollup/plugin-url": "^8.0.1",
    "axios": "^0.21.1",
    "fs-extra": "^10.1.0",
    "yaml": "^2.1.3"
  },
  "scripts": {
    "build": "yarn build-native && yarn build-ui && electron-builder",
    "build-native": "cmake-js && cp ./build/Release/* .",
    "build-ui": "rollup -c",
    "watch": "nodemon --ext .js,.mjs,.cjs,.css --ignore ui/app-dist/ --exec sh -c \"yarn build-ui && electron .\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-yaml": "^4.0.1",
    "cmake-js": "^7.0.0",
    "electron": "^21.2.1",
    "electron-builder": "^23.6.0",
    "node-addon-api": "^5.0.0",
    "nodemon": "^2.0.9",
    "rollup": "^2.26.10",
    "rollup-plugin-import-css": "^2.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "type": "module",
  "main": "index.cjs",
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "21.2.1"
  },
  "build": {
    "appId": "website.donn.nudelta",
    "extraResources": "res",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "zip"
      ],
      "icon": "./res/nudelta.icns"
    }
  }
}